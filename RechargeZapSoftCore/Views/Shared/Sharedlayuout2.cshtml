            $('#ModalOTP').modal({ backdrop: 'static', keyboard: false })
        }
        function ClosepopupOTP() {
            $('#ModalOTP').modal('hide');
            $('body').removeClass('modal-open');
            $('body').css('padding-right', '0');
            $('.modal-backdrop').remove();
        }

        $(document).ready(function () {
            var myJsVariable = '@ViewBag.OTPPopup'
            if (myJsVariable == 'IsOTP') {

                ClosepopupLoginEmail();
                showModalOTP();
            }

            var VarOTPError = '@ViewBag.OTPError'
            if (VarOTPError == '1') {

                toastr.error('Error', 'Invalid OTP');
                showModalOTP();
            }
            var LoginEMail = '@HttpContextAccessor.HttpContext.Session.GetString("LoginEmail")';


                if (LoginEMail != '') {
                    //alert(LoginEMail);
                    document.getElementById("spanuserlogin").removeAttribute('onclick');
                    document.getElementById("spanuserlogin").setAttribute("href", "/Home/Dashboard");
                    document.getElementById("spanuserlogin").innerHTML = 'My Account' ;

                }

        });
    </script>
