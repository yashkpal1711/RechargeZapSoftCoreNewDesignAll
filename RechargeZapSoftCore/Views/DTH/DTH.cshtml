            }
            else if (oid == 15) {
                document.getElementById("dthdesc").innerHTML = "Find the smart card number on the back side of the card inserted into your set-top box";
                document.getElementById("dthtext").innerHTML = "Smart Card Number";
            }
            else if (oid == 53) {
                document.getElementById("dthdesc").innerHTML = "Subscriber ID or Registered Mobile Hint - Subscriber id starts with 1 and is 10 digit long. Find the Subscriber id by clicking on the Home button on your remote";
                document.getElementById("dthtext").innerHTML = "Subscriber ID or Registered Mobile";
            }
            else if (oid == 16) {
                document.getElementById("dthdesc").innerHTML = "Subscriber Id can be found by sending an SMS ‘ID’ to 566777 from your registered mobile number";
                document.getElementById("dthtext").innerHTML = "Subscriber ID or Registered Mobile";
            }
            else {
                document.getElementById("dthdesc").innerHTML = "";

                document.getElementById("dthtext").innerHTML = "Subscriber ID or Registered Mobile";
            }
