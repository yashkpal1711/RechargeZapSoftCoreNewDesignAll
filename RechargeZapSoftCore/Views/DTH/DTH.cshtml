        function loadDTHOperator() {
            $.ajax({

                url: '/api/Recharge/getOperatorDTH',
                //data: "{ 'Amount': '" + depositeAmt  + "','userid': '" + '<%=Session["UserId"] %>'  + "','FromWalletAddress': '" + wallet_address  + "','ToWalletAddress': '" + contract_addr  + "','ReferenceId': '" + result  + "'}",
                data: "",
                dataType: "json",
                type: 'GET',
                contentType: "application/json; charset=utf-8",

                success: function (result) {
                    //alert(result);
                    //console.log(result.d);
                    $('#ddoperatordth').empty();
                    $('#ddoperatordth').append('<option value="0">Select Operator</option>');
                    $.each(result, function (result, value) {

                        $("#ddoperatordth").append($("<option></option>").val(value.id).html(value.operator));
                    })
                    //toastr.success('Success', result.d);

                },
