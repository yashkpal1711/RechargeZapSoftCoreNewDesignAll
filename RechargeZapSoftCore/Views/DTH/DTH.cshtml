        function validateDTHRecharge() {
            if (document.getElementById("amountdth").value == "") {
                toastr.warning('Warning', 'Enter Amount');
                document.getElementById("amountdth").focus();
                return false;
            }
            if (parseFloat(document.getElementById("amountdth").value) <= 0) {
                toastr.warning('Warning', 'Amount Must Be Greater Than 0');
                document.getElementById("amountdth").focus();
                return false;
            }
            else if (parseFloat(document.getElementById("amountdth").value) > 10000) {
                toastr.warning('Warning', 'Amount Must Be Less Than Or Equal To 10000');
                document.getElementById("amountdth").focus();
                return false;
            }
            else if (document.getElementById("numberdth").value == "") {
                toastr.warning('Warning', 'Enter VC Number');
                document.getElementById("numberdth").focus();
                return false;
            }
            else if ($('#ddoperatordth').find(":selected").val() == "0") {
                toastr.warning('Warning', 'Select Operator');
                document.getElementById("ddoperatordth").focus();
                return false;
            }

            else {

                //document.getElementById("amountConfirm").value = document.getElementById("amountdth").value;
                //document.getElementById("operatorConfirm").value = $('#ddoperatordth').find(":selected").text();
                //document.getElementById("mobileConfirm").value = document.getElementById("numberdth").value;
                //document.getElementById("customermobileConfirm").value = document.getElementById("mobileNumber").value;


                document.getElementById("amountConfirmuserdetail").value = document.getElementById("amountdth").value;
                document.getElementById("operatoridConfirmuserdetail").value = $('#ddoperatordth').find(":selected").val();
                document.getElementById("mobileConfirmuserdetail").value = document.getElementById("numberdth").value;

                //document.getElementById("mobileuserdetail").value = document.getElementById("mobileNumber").value;
                document.getElementById("headeruserdetail").innerHTML = document.getElementById("numberdth").value + ' - <i class="fa fa-inr"></i>' + document.getElementById("amountdth").value

                document.getElementById('recharge').style.display = 'none';
                document.getElementById('userdetail').style.display = 'block';
            }
        }
